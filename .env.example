# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env.development or .env.production
# and update the values accordingly
#
# For Development: cp .env.example .env.development
# For Production:  cp .env.example .env.production
# ============================================

# Application Environment
# Options: development | production
NODE_ENV=development

# Server Port
PORT=3000

# Swagger API Documentation
# Enable/disable Swagger UI (recommended: true for dev, false for prod)
SWAGGER_ENABLED=true

# ============================================
# DATABASE CONFIGURATION
# ============================================

# PostgreSQL Database Credentials
POSTGRES_USER=reservation_user
POSTGRES_PASSWORD=reservation_password  # CHANGE THIS IN PRODUCTION!
POSTGRES_DB=reservation_db
POSTGRES_PORT=5432

# Database Connection (for NestJS Application)
# For Docker: use service name 'postgres'
# For local: use 'localhost'
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=reservation_user
DATABASE_PASSWORD=reservation_password  # CHANGE THIS IN PRODUCTION!
DATABASE_NAME=reservation_db

# ============================================
# PGADMIN (DEVELOPMENT ONLY)
# ============================================
# Remove these in production environment

PGADMIN_EMAIL=admin@reservation.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# ============================================
# SECURITY & CORS
# ============================================

# CORS Allowed Origins
# Development: Use '*' to allow all origins
# Production: Specify exact origins, e.g., 'https://yourdomain.com,https://app.yourdomain.com'
CORS_ORIGIN=*

# JWT Secret (if using authentication)
# Generate a strong secret: openssl rand -base64 32
# JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# API Keys (if needed)
# API_KEY=your-api-key-here

# ============================================
# LOGGING (PRODUCTION)
# ============================================

# Log Level: error | warn | info | debug | verbose
# LOG_LEVEL=info

# ============================================
# RATE LIMITING (PRODUCTION)
# ============================================

# RATE_LIMIT_TTL=60
# RATE_LIMIT_MAX=100
